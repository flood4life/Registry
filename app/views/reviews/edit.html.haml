.panel
  .panel-heading
    .panel-title
      %h2
        Editing review by
        %span.text-muted
          - if current_user == @review.user
            you
          - elsif @review.user.present?
            = @review.user.email
          - else
            guest
            = @review.guest_name

        for
        = link_to @review.product.name, catalog_product_path(@review.product.catalog, @review.product)
  .panel-body
    .row
      = render 'form'
