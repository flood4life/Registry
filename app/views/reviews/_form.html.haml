= form_for [product, review] do |f|

  - if review.errors.any?
    #error_explanation
      %h2
        = pluralize(@review.errors.count, "error")
        prohibited this review from being saved:
      %ul
      - @review.errors.full_messages do |message|
        %li= message

  .field
    = f.label :message
    %br
    = f.text_area :message
  .actions
    = f.submit
